{
  "name": "members-only-pg",
  "version": "1.0.0",
  "description": "This project is an exercise from [the odin project](https://www.theodinproject.com/lessons/node-path-nodejs-members-only).",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "tw-watch": "tailwindcss -i ./public/stylesheets/tailwind.css -o ./public/stylesheets/styles.css --watch",
    "build": "rm -rv ./dist && tsc && tailwindcss -i ./public/stylesheets/tailwind.css -o ./public/stylesheets/styles.css",
    "dev": "tsx watch app.ts",
    "cpa": "rsync -avhP --delete ./public/ ./dist/public/ && rsync -avhP --delete ./views/ ./dist/views/",
    "watch-cpa": "npm-watch cpa",
    "prettier": "prettier . --write",
    "start": "node ./dist/app.js"
  },
  "watch": {
    "cpa": {
      "patterns": [
        "public",
        "views"
      ],
      "extensions": "css,ejs"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/luxon": "^3.4.2",
    "@types/pg": "^8.11.8",
    "concurrently": "^8.2.2",
    "npm-watch": "^0.13.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.0",
    "luxon": "^3.5.0",
    "pg": "^8.12.0"
  }
}
